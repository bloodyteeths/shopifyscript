{
  "version": 2,
  "rewrites": [
    {
      "source": "/build/(.*)",
      "destination": "/public/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SHOPIFY_APP_URL": "https://shopifyscript-shopify-ui.vercel.app",
    "SCOPES": "read_products,write_products",
    "BACKEND_PUBLIC_URL": "https://shopifyscript-backend.vercel.app/api"
  }
}
