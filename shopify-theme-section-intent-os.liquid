{% comment %}
====================================
Intent OS UTM-Driven Content Section
====================================
ProofKit SaaS - Conversion Rate Optimization
Dynamically swaps content based on UTM parameters for targeted messaging

Installation:
1. Add this file to your theme's sections/ directory as "intent-os-utm.liquid"
2. Include in your template: {% section 'intent-os-utm' %}
3. Configure settings in Theme Customizer
4. Test with UTM parameters: ?utm_term=high-intent, ?utm_term=research, ?utm_term=comparison

Author: ProofKit Intent OS
Version: 1.0.0
{% endcomment %}

{% liquid
  comment 'Extract UTM term from URL'
  assign utm_term = request.url | split: 'utm_term=' | last | split: '&' | first | downcase
  assign content_key = utm_term | default: 'default'
  
  comment 'Determine content strategy based on UTM term'
  case content_key
    when 'high-intent'
      assign hero_headline = section.settings.high_intent_headline | default: "Limited Time: Don't Miss Out!"
      assign urgency_badge = section.settings.high_intent_urgency | default: "URGENT"
      assign cta_style = 'btn-primary-urgent'
      assign social_proof = section.settings.high_intent_social_proof | default: "Join 50,000+ customers who saved big!"
      assign benefits_focus = 'urgency'
    when 'research'
      assign hero_headline = section.settings.research_headline | default: "Discover the Perfect Solution"
      assign urgency_badge = ''
      assign cta_style = 'btn-secondary'
      assign social_proof = section.settings.research_social_proof | default: "Trusted by industry experts"
      assign benefits_focus = 'educational'
    when 'comparison'
      assign hero_headline = section.settings.comparison_headline | default: "See Why We're #1"
      assign urgency_badge = section.settings.comparison_badge | default: "BEST VALUE"
      assign cta_style = 'btn-comparison'
      assign social_proof = section.settings.comparison_social_proof | default: "Rated #1 by independent reviews"
      assign benefits_focus = 'competitive'
    when 'retargeting'
      assign hero_headline = section.settings.retargeting_headline | default: "Welcome Back! Complete Your Purchase"
      assign urgency_badge = section.settings.retargeting_badge | default: "SAVE 15%"
      assign cta_style = 'btn-retargeting'
      assign social_proof = section.settings.retargeting_social_proof | default: "Your items are waiting"
      assign benefits_focus = 'personal'
    else
      assign hero_headline = section.settings.default_headline | default: "Welcome to Our Store"
      assign urgency_badge = ''
      assign cta_style = 'btn-primary'
      assign social_proof = section.settings.default_social_proof | default: "Join thousands of satisfied customers"
      assign benefits_focus = 'general'
  endcase
  
  comment 'Analytics tracking'
  assign intent_block_id = section.id | append: '-' | append: content_key
%}

<!-- Intent OS Analytics -->
<script>
  window.intentOSData = window.intentOSData || {};
  window.intentOSData.currentUTM = '{{ content_key }}';
  window.intentOSData.sectionId = '{{ section.id }}';
  window.intentOSData.timestamp = new Date().toISOString();
  
  // Track content variation view
  if (typeof gtag !== 'undefined') {
    gtag('event', 'intent_os_view', {
      'utm_term': '{{ content_key }}',
      'section_id': '{{ section.id }}',
      'headline': '{{ hero_headline | escape }}'
    });
  }
</script>

<div class="intent-os-section intent-os-{{ content_key }}" 
     data-utm-term="{{ content_key }}" 
     data-section-id="{{ section.id }}"
     id="{{ intent_block_id }}">
  
  {% comment %} Urgency Badge {% endcomment %}
  {% if urgency_badge != blank and section.settings.show_urgency_badge %}
    <div class="intent-os-urgency-badge {{ cta_style }}-badge">
      {{ urgency_badge }}
    </div>
  {% endif %}
  
  {% comment %} Hero Section {% endcomment %}
  <div class="intent-os-hero">
    {% if section.settings.show_hero_image and section.settings.hero_image %}
      <div class="intent-os-hero-image">
        {{ section.settings.hero_image | image_url: width: 800 | image_tag: 
           loading: 'lazy', 
           alt: hero_headline,
           class: 'intent-os-image' }}
      </div>
    {% endif %}
    
    <h1 class="intent-os-headline intent-os-headline-{{ content_key }}">
      {{ hero_headline }}
    </h1>
    
    {% if section.settings.show_subheadline and section.settings.subheadline != blank %}
      <p class="intent-os-subheadline">{{ section.settings.subheadline }}</p>
    {% endif %}
  </div>
  
  {% comment %} Benefits List {% endcomment %}
  {% if section.settings.show_benefits %}
    <div class="intent-os-benefits intent-os-benefits-{{ benefits_focus }}">
      {% for i in (1..6) %}
        {% assign benefit_key = 'benefit_' | append: i %}
        {% assign benefit = section.settings[benefit_key] %}
        {% if benefit != blank %}
          <div class="intent-os-benefit-item">
            <span class="intent-os-benefit-icon">
              {% case benefits_focus %}
                {% when 'urgency' %}
                  ‚ö°
                {% when 'educational' %}
                  üìö
                {% when 'competitive' %}
                  üèÜ
                {% when 'personal' %}
                  üíù
                {% else %}
                  ‚úì
              {% endcase %}
            </span>
            <span class="intent-os-benefit-text">{{ benefit }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
  
  {% comment %} Social Proof {% endcomment %}
  {% if section.settings.show_social_proof and social_proof != blank %}
    <div class="intent-os-social-proof intent-os-social-proof-{{ content_key }}">
      {% if section.settings.show_testimonial_stars %}
        <div class="intent-os-stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</div>
      {% endif %}
      <p class="intent-os-social-text">{{ social_proof }}</p>
      {% if section.settings.customer_count != blank %}
        <span class="intent-os-customer-count">{{ section.settings.customer_count }}+ customers</span>
      {% endif %}
    </div>
  {% endif %}
  
  {% comment %} Call to Action {% endcomment %}
  {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
    <div class="intent-os-cta-container">
      <a href="{{ section.settings.cta_url }}" 
         class="intent-os-cta-button {{ cta_style }}"
         onclick="intentOSTrackCTA('{{ content_key }}', '{{ section.settings.cta_text | escape }}')">
        {{ section.settings.cta_text }}
        {% if section.settings.show_cta_arrow %}
          <span class="intent-os-cta-arrow">‚Üí</span>
        {% endif %}
      </a>
      
      {% if section.settings.secondary_cta_text != blank and section.settings.secondary_cta_url != blank %}
        <a href="{{ section.settings.secondary_cta_url }}" 
           class="intent-os-cta-secondary"
           onclick="intentOSTrackCTA('{{ content_key }}', '{{ section.settings.secondary_cta_text | escape }}', 'secondary')">
          {{ section.settings.secondary_cta_text }}
        </a>
      {% endif %}
    </div>
  {% endif %}
  
  {% comment %} Trust Signals {% endcomment %}
  {% if section.settings.show_trust_signals %}
    <div class="intent-os-trust-signals">
      {% if section.settings.trust_badge_1 %}
        {{ section.settings.trust_badge_1 | image_url: width: 100 | image_tag: 
           loading: 'lazy', 
           class: 'intent-os-trust-badge',
           alt: 'Trust badge' }}
      {% endif %}
      {% if section.settings.trust_badge_2 %}
        {{ section.settings.trust_badge_2 | image_url: width: 100 | image_tag: 
           loading: 'lazy', 
           class: 'intent-os-trust-badge',
           alt: 'Trust badge' }}
      {% endif %}
      {% if section.settings.trust_badge_3 %}
        {{ section.settings.trust_badge_3 | image_url: width: 100 | image_tag: 
           loading: 'lazy', 
           class: 'intent-os-trust-badge',
           alt: 'Trust badge' }}
      {% endif %}
    </div>
  {% endif %}
  
  {% comment %} Countdown Timer for High Intent {% endcomment %}
  {% if content_key == 'high-intent' and section.settings.show_countdown %}
    <div class="intent-os-countdown" id="intent-os-countdown-{{ section.id }}">
      <div class="intent-os-countdown-text">Limited time offer ends in:</div>
      <div class="intent-os-countdown-timer">
        <span id="countdown-hours">24</span>h
        <span id="countdown-minutes">00</span>m
        <span id="countdown-seconds">00</span>s
      </div>
    </div>
  {% endif %}
</div>

<!-- Intent OS Analytics & Interaction Tracking -->
<script>
  function intentOSTrackCTA(utmTerm, ctaText, type = 'primary') {
    // Google Analytics tracking
    if (typeof gtag !== 'undefined') {
      gtag('event', 'intent_os_cta_click', {
        'utm_term': utmTerm,
        'cta_text': ctaText,
        'cta_type': type,
        'section_id': '{{ section.id }}'
      });
    }
    
    // Custom tracking for ProofKit
    if (window.proofkit && window.proofkit.track) {
      window.proofkit.track('intent_os_conversion', {
        utm_term: utmTerm,
        cta_text: ctaText,
        cta_type: type,
        section_id: '{{ section.id }}',
        timestamp: new Date().toISOString()
      });
    }
    
    // Send to backend for analytics
    fetch('/api/intent-os/track-interaction', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        event: 'cta_click',
        utm_term: utmTerm,
        cta_text: ctaText,
        cta_type: type,
        section_id: '{{ section.id }}',
        url: window.location.href,
        timestamp: new Date().toISOString()
      })
    }).catch(e => console.log('Intent OS tracking failed:', e));
  }
  
  {% if content_key == 'high-intent' and section.settings.show_countdown %}
  // Countdown timer for urgency
  function startCountdown() {
    const countdownElement = document.getElementById('intent-os-countdown-{{ section.id }}');
    if (!countdownElement) return;
    
    const hours = parseInt('{{ section.settings.countdown_hours | default: 24 }}');
    const endTime = new Date().getTime() + (hours * 60 * 60 * 1000);
    
    const timer = setInterval(function() {
      const now = new Date().getTime();
      const distance = endTime - now;
      
      if (distance < 0) {
        clearInterval(timer);
        countdownElement.style.display = 'none';
        return;
      }
      
      const hoursLeft = Math.floor(distance / (1000 * 60 * 60));
      const minutesLeft = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const secondsLeft = Math.floor((distance % (1000 * 60)) / 1000);
      
      document.getElementById('countdown-hours').textContent = hoursLeft.toString().padStart(2, '0');
      document.getElementById('countdown-minutes').textContent = minutesLeft.toString().padStart(2, '0');
      document.getElementById('countdown-seconds').textContent = secondsLeft.toString().padStart(2, '0');
    }, 1000);
  }
  
  // Start countdown on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', startCountdown);
  } else {
    startCountdown();
  }
  {% endif %}
</script>

