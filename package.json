{
  "name": "proofkit-saas",
  "version": "1.0.0",
  "description": "ProofKit SaaS - Comprehensive testing suite and application",
  "type": "module",
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd shopify-ui && npm run dev",
    "dev:shopify": "cd shopify-app && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:shopify\"",
    "test": "npm run test:backend && npm run test:frontend && npm run test:e2e",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd shopify-ui && npm test",
    "test:e2e": "cypress run",
    "test:e2e:headed": "cypress open",
    "test:performance": "cd tests/performance && npm test",
    "test:unit": "cd backend && npm run test:unit",
    "test:integration": "cd backend && npm run test:integration",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "cd backend && npm run test:coverage",
    "test:coverage:frontend": "cd shopify-ui && npm run test:coverage",
    "test:watch": "cd backend && npm run test:watch",
    "cypress:ci": "cypress run --browser chrome --headless",
    "cypress:headed": "cypress open",
    "seed:demo": "cd backend && node scripts/seed-demo-data.js",
    "build:docs": "node docs/build-funnel-doc.mjs",
    "annotate:images": "node docs/annotate-images.mjs",
    "benchmark": "cd tests/performance && npm run benchmark",
    "install:all": "npm install && cd backend && npm install && cd ../shopify-ui && npm install && cd ../shopify-app && npm install && cd ../tests/performance && npm install",
    "build": "cd shopify-ui && npm run build",
    "start": "cd shopify-ui && npm run start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cypress": "^13.6.0",
    "@cypress/grep": "^4.0.1",
    "cypress-axe": "^1.5.0",
    "cypress-real-events": "^1.11.0",
    "@testing-library/cypress": "^10.0.1",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "sharp": "^0.33.0"
  },
  "workspaces": [
    "backend",
    "shopify-ui",
    "shopify-app",
    "tests/performance"
  ]
}