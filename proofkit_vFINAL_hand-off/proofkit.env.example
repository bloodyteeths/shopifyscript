# Proofkit .env.example (dev defaults)
# Copy to .env and fill in values. Do NOT commit your real .env.

# --- Core backend ---
HMAC_SECRET=change_me
PORT=3001
BACKEND_URL=http://localhost:3001

# Map of tenants to Google Sheets IDs (JSON). Example below keeps one tenant.
TENANT_REGISTRY_JSON={"TENANT_123":"<YOUR_GOOGLE_SHEET_ID>"}

# --- CORS / Security ---
ALLOWED_ORIGINS=http://localhost:3000,https://your-app-domain.myshopify.com
RATE_LIMIT_PER_MIN=60

# --- AI (Google Gemini) ---
AI_PROVIDER=google
GOOGLE_API_KEY=
AI_MODEL=gemini-1.5-flash
AI_TEMPERATURE=0.4
AI_MAX_CALLS_PER_RUN=20

# --- Ads Script behavior ---
AUDIENCE_MIN_SIZE=1000
STARTER_ENABLED=true

# --- Shopify (optional local dev) ---
SHOPIFY_APP_URL=http://localhost:3000
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# --- WordPress (optional) ---
WP_BACKEND_URL=http://localhost:3001
