# ProofKit SaaS Environment Configuration
# Copy this file to .env and update with your actual values

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ================================
# GOOGLE SERVICES
# ================================
# Google Sheets API credentials
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com
GOOGLE_SHEETS_PROJECT_ID=your-project-id

# Gemini AI API
GEMINI_API_KEY=AIzaSyYOUR_GEMINI_API_KEY_HERE

# ================================
# SHOPIFY INTEGRATION (Optional)
# ================================
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret

# ================================
# SECURITY
# ================================
# Generate a strong secret (32+ characters)
HMAC_SECRET=your_very_strong_secret_key_at_least_32_characters_long

# CORS configuration
CORS_ORIGIN=https://yourdomain.com

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# PERFORMANCE & CACHING
# ================================
CACHE_TTL=300000
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30000

# ================================
# LOGGING & MONITORING
# ================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
METRICS_ENABLED=true

# ================================
# HEALTH CHECKS
# ================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ================================
# REDIS (if using)
# ================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password

# ================================
# MONITORING (Optional)
# ================================
GRAFANA_PASSWORD=secure_grafana_password

# ================================
# SSL/TLS (Production)
# ================================
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem